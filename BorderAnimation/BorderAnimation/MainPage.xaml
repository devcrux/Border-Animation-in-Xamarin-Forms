<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorderAnimation.MainPage">

    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Grid HeightRequest="300" WidthRequest="300"  HorizontalOptions="Center" VerticalOptions="Center">
                <Rectangle x:Name="mainRect" StrokeThickness="10" HorizontalOptions="FillAndExpand" 
                    VerticalOptions="FillAndExpand">
                    <Rectangle.Stroke>
                        <LinearGradientBrush>
                            <GradientStop x:Name="tealGrad" Color="#56D9BE" Offset="0"/>
                            <GradientStop x:Name="orangeGrad" Color="#EE7752" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Stroke>
                </Rectangle>
                <Image Source="xmas.png" Aspect="AspectFill" Margin="10" HorizontalOptions="FillAndExpand" 
                   VerticalOptions="FillAndExpand"/>
            </Grid>
            <Label Text="Santa Claus is coming to town!" TextColor="Black" HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>

</ContentPage>
